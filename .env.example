# Environment variables for Train Status container deployment
# Copy this file to .env and fill in your values

# RTT API Credentials (required)
# Get credentials from https://www.realtimetrains.co.uk/api
RTT_USER=your_rtt_username
RTT_PASS=your_rtt_password

# Journey Configuration
# Use TIPLOC codes (e.g., CAMBDGE for Cambridge, KNGX for Kings Cross)
ORIGIN_TIPLOC=CAMBDGE
DEST_TIPLOC=KNGX

# How many minutes from now to look for trains (default: 30)
OFFSET_MINUTES=30

# Time window to search for trains in minutes (default: 60)
WINDOW_MINUTES=60

# Matter Device Configuration
# Set to 'false' to expose each endpoint directly (better naming in Google Home)
# Set to 'true' to use a bridge/aggregator (all devices under one bridge)
USE_BRIDGE=true

# Device names as shown in Matter controller
DEVICE_NAME=Train Status Monitor
# Optional: Override individual endpoint names
# STATUS_DEVICE_NAME=Cambridge-KingsX Status
# DELAY_DEVICE_NAME=Cambridge-KingsX Delay

# Update frequency in milliseconds (60000 = 1 minute)
UPDATE_INTERVAL_MS=60000

# Logging level: error, warn, info, debug
LOG_LEVEL=info
