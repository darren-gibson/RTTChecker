{
  "compilerOptions": {
    "checkJs": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "index.js"],
  "exclude": ["node_modules", "coverage", "docker", "matter-storage"]
}
