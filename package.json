  "description": "A Matter smart home device that reports train status using RTT API data with Mode Select cluster.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test": "jest --coverage",
    "test:bdd": "jest tests/bdd",
