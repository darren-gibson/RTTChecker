{
  "name": "rtt-checker",
  "version": "0.2.0",
  "description": "A Matter smart home device that reports train status using RTT API data with Mode Select cluster.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env index.js",
    "test": "jest --coverage",
    "test:bdd": "jest tests/bdd",
    "lint": "eslint . --ext .js,.cjs,.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "npm run lint && npm run format:check && npm test && npm audit --production",
    "diagnose": "./diagnose.sh",
    "reset": "./reset-commissioning.sh"
  },
  "keywords": [
    "matter",
    "smart-home",
    "train",
    "rtt-api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24"
  },
  "packageManager": "npm@10.9.2",
  "devDependencies": {
    "@babel/preset-env": "7.28.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pino": "^7.0.4",
    "babel-jest": "^30.2.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-cucumber": "^4.5.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.7.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@matter/general": "^0.15.6",
    "@matter/main": "^0.15.6",
    "@matter/nodejs": "^0.15.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "qrcode-terminal": "^0.12.0",
    "zod": "^4.1.13"
  }
