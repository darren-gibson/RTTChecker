    "babel-jest": "^30.2.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-cucumber": "^4.5.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@project-chip/matter-node.js": "^0.12.6",
    "@project-chip/matter.js": "^0.12.6",
